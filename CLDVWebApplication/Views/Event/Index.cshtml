    @{
        ViewData["Title"] = "Events";
    }

    <h1>Events</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Event</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Event Name</th>
                <th>Event Date and Time</th>
                <th>Description</th>
                <th>Venue</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var eventItem in Model)
            {
                <tr>
                    <td>@eventItem.EventName</td>
                    <td>@eventItem.EventDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@eventItem.Description</td>
                    <td>@eventItem.Venue.VenueName</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@eventItem.EventId" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@eventItem.EventId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@eventItem.EventId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
