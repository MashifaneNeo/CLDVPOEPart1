@model CLDVWebApplication.Models.EventTable

@{
    ViewData["Title"] = "Create Event";
}

<h1>Create Event</h1>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Event Name -->
    <div class="form-group">
        <label asp-for="EventName" class="control-label"></label>
        <input asp-for="EventName" class="form-control" required />
        <span asp-validation-for="EventName" class="text-danger"></span>
    </div>

    <!-- Event Date -->
    <div class="form-group">
        <label asp-for="EventDate" class="control-label"></label>
        <input asp-for="EventDate" type="datetime-local" class="form-control" required />
        <span asp-validation-for="EventDate" class="text-danger"></span>
    </div>

    <!-- Description -->
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Venue Selection -->
    <div class="form-group">
        <label asp-for="VenueId" class="control-label"></label>
        <select asp-for="VenueId" class="form-control" asp-items="ViewBag.VenueId" required>
            <option value="">-- Select Venue --</option>
        </select>
        <span asp-validation-for="VenueId" class="text-danger"></span>
    </div>

    <!-- Submit Button -->
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}