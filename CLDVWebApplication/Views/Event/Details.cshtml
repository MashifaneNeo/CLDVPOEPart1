@model CLDVWebApplication.Models.EventTable

@{
    ViewData["Title"] = "Event Details";
}

<h1>Event Details</h1>

<div>
    <h4>@Model.EventName</h4>
    <p><strong>Date:</strong> @Model.EventDate.ToString("yyyy-MM-dd HH:mm")</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Venue:</strong> @Model.Venue.VenueName</p>
</div>

<a asp-action="Edit" asp-route-id="@Model.EventId" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>